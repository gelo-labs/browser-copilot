{
  "manifest_version": 3,
  "name": "GeloLabs: Browser Copilot",
  "description": "Your browser copilot for blocking YouTube Shorts, analyzing videos with AI, and capturing meeting notes from Google Meet. Open beta - report issues to hello@gelolabs.com",
  "version": "2.3.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://meet.google.com/*",
    "https://gelolabs.com/*",
    "https://www.gelolabs.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://gelolabs.com/*",
        "https://www.gelolabs.com/*"
      ],
      "js": ["gelolabs-content.js", "test-logo-spinner.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["teleprompter-overlay.js", "clipboard-overlay.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["icons/logo1.png", "icons/logo2.png"],
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*", "https://meet.google.com/*"]
    },
    {
      "resources": ["playbutton.png"],
      "matches": ["<all_urls>"]
    }
  ]
}